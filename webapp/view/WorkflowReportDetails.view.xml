<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
	xmlns:upload="sap.m.upload" controllerName="workflowReport.workflowReport.controller.WorkflowReportDetails">
	<App>
		<pages>
			<Page title="Training Event Details">
				<IconTabBar>
					<items>
						<IconTabFilter key="businessEvent" text="Business Event" visible="{tabVisibility>/showBusinessEventTab}">
							<Panel headerText="Employee Information">
								<l:Grid defaultSpan="L6 M6 S12">
									<VBox class="sapUiSmallMargin">
										<Label text="Badge No:"/>
										<Input value="{businessEventModel>/eventDetails/BADGE_NO}" editable="false"/>
										<Label text="Employee Name:"/>
										<Input value="{businessEventModel>/eventDetails/EMPLOYEE_NAME}" editable="false"/>
										<Label text="Job Name:"/>
										<Input value="{businessEventModel>/eventDetails/JOB_NAME}" editable="false"/>
										<Label text="Grade:"/>
										<Input value="{businessEventModel>/eventDetails/GRADE}" editable="false"/>
										<Label text="Nationality:"/>
										<Input value="{businessEventModel>/eventDetails/NATIONALITY}" editable="false"/>
										<Label text="Qualification:"/>
										<Input value="{businessEventModel>/eventDetails/QUALIFICATION}" editable="false"/>
										<Label text="Development Program:"/>
										<Input value="{businessEventModel>/eventDetails/DEVELOPMENT_PROGRAM}" editable="false"/>
										<Label text="SEC Date Entry:"/>
										<DatePicker value="{businessEventModel>/eventDetails/SEC_DATE_ENTRY}" editable="false"/>
									</VBox>
									<VBox class="sapUiSmallMargin">
										<Label text="Business Line:"/>
										<Input value="{businessEventModel>/eventDetails/BUSINESS_LINE}" editable="false"/>
										<Label text="Sector:"/>
										<Input value="{businessEventModel>/eventDetails/SECTOR}" editable="false"/>
										<Label text="Department:"/>
										<Input value="{businessEventModel>/eventDetails/DEPARTMENT}" editable="false"/>
										<Label text="Division:"/>
										<Input value="{businessEventModel>/eventDetails/DIVISION}" editable="false"/>
										<Label text="Personnel Subarea:"/>
										<Input value="{businessEventModel>/eventDetails/PERSONNEL_SUBAREA}" editable="false"/>
									</VBox>
								</l:Grid>
							</Panel>
							<Panel headerText="Business Event Request Information">
								<l:Grid defaultSpan="L6 M6 S12">
									<VBox class="sapUiSmallMargin">
										<Label text="CRID:"/>
										<Input value="{businessEventModel>/eventDetails/EVENT_ID}" editable="false"/>
										<Label text="Business Event Classification:"/>
										<Input value="{businessEventModel>/eventDetails/BUSINESS_EVENT_CLASSIFICATION}" editable="false"/>
										<Label text="Business Event Type:"/>
										<Input value="{businessEventModel>/eventDetails/BUSINESS_EVENT_TYPE}" editable="false"/>
										<Label text="Business Event Start Date:"/>
										<DatePicker value="{businessEventModel>/eventDetails/BUSINESS_EVENT_START_DATE}" editable="false"/>
										<Label text="Business Event End Date:"/>
										<DatePicker value="{businessEventModel>/eventDetails/BUSINESS_EVENT_END_DATE}" editable="false"/>
										<Label text="Organizer of Business Event:"/>
										<Input value="{businessEventModel>/eventDetails/ORGANIZER_OF_BUSINESS_EVENT}" editable="false"/>
										<Label text="Business Event Price:"/>
										<HBox>
											<Input
												value="{path: 'businessEventModel>/eventDetails/BUSINESS_EVENT_PRICE', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2, groupingEnabled: true, groupingSeparator: ',', decimalSeparator: '.' }}"
												editable="false" textAlign="End"/>
											<Select value="{businessEventModel>/eventDetails/CURRENCY}" editable="false">
												<core:Item key="SAR" text="SAR"/>
												<core:Item key="USD" text="USD"/>
												<core:Item key="GBP" text="GBP"/>
												<core:Item key="EURO" text="EURO"/>
											</Select>
										</HBox>
										<Label text="Business Event Link:"/>
										<Input value="{businessEventModel>/eventDetails/BUSINESS_EVENT_LINK}" editable="false"/>
										<Label text="Justification:"/>
										<Input value="{businessEventModel>/eventDetails/JUSTIFICATION}" editable="false"/>
									</VBox>
									<VBox class="sapUiSmallMargin" width="100%">
										<Label text="Business Event Name:"/>
										<Input value="{businessEventModel>/eventDetails/BUSINESS_EVENT_NAME}" editable="false"/>
										<Label text="Location of Business Event:"/>
										<Input value="{businessEventModel>/eventDetails/LOCATION_OF_BUSINESS_EVENT}" editable="false"/>
										<Label text="Country:"/>
										<Input value="{businessEventModel>/eventDetails/COUNTRY}" editable="false"/>
										<Label text="City:"/>
										<Input value="{businessEventModel>/eventDetails/CITY}" editable="false"/>
										<Label text="Business Event Language:"/>
										<Input value="{businessEventModel>/eventDetails/BUSINESS_EVENT_LANGUAGE}" editable="false"/>
										<Label text="Is Authority Approved:"/>
										<Input value="{businessEventModel>/eventDetails/IS_AUTHORITY_APPROVED}" editable="false"/>
										<Label text="Email:"/>
										<Input value="{businessEventModel>/eventDetails/EMAIL}" editable="false"/>
										<Label text="Phone Number:"/>
										<Input value="{businessEventModel>/eventDetails/PHONE_NUMBER}" editable="false"/>
										<Label text="Website Provider:"/>
										<Input value="{businessEventModel>/eventDetails/WEBSITE_PROVIDER}" editable="false"/>
									</VBox>
								</l:Grid>
							</Panel>
							<Panel headerText="Attachments">
								<VBox class="sapUiSmallMargin">
									<Table id="attachmentsTable" items="{businessEventModel>/attachments}">
										<columns>
											<Column><Text text="Attachment ID"/></Column>
											<Column><Text text="Attachment Name"/></Column>
											<Column><Text text="Attachment Type"/></Column>
											<Column hAlign="Center"><Text text="Download"/></Column>
										</columns>
										<items>
											<ColumnListItem>
												<cells>
													<Text text="{businessEventModel>ATTACHMENT_ID}"/>
													<Text text="{businessEventModel>ATTACHMENT_NAME}"/>
													<Text text="{businessEventModel>ATTACHMENT_TYPE}"/>
													<Button icon="sap-icon://download" press="onDownloadPress" tooltip="Download Attachment"/>
												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</VBox>
							</Panel>
						</IconTabFilter>
						<IconTabFilter key="workflowLogInfo" text="Direct Enrollment" visible="{tabVisibility>/showWorkflowLogInfoTab}">
