									</VBox>
									<VBox class="sapUiSmallMargin">
										<Label text="Training Duration:"/>
										<Input value="{workflowLogModel>/TRAINING_DURATION}" editable="false"/>
									</VBox>
									<!-- Row 8 -->
									<VBox class="sapUiSmallMargin">
										<Label text="Price:"/>
