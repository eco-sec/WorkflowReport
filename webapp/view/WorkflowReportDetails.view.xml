							</Panel>
						</IconTabFilter>
						<IconTabFilter key="info" text="Training Request" visible="{tabVisibility>/showInfoTab}">
							<Panel headerText="Information">
								<l:Grid defaultSpan="L6 M6 S12">
									<VBox class="sapUiSmallMargin">
										<Label text="Request ID:"/>
										<Input value="{workflowReportModel>/requestId}" editable="false"/>
