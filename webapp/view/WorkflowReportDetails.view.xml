									<!--		editable="false"/>-->
									<!--</VBox>-->
									<!-- Row 5 -->
									<VBox class="sapUiSmallMargin">
										<Label text="Employee ID:"/>
										<Input value="{workflowLogModel>/EMPLOYEE_ID}" editable="false"/>
									</VBox>
									<VBox class="sapUiSmallMargin">
										<Label text="Employee Name:"/>
										<Input value="{workflowLogModel>/EMPLOYEE_NAME}" editable="false"/>
									</VBox>
									<!-- Row 6 -->
									<VBox class="sapUiSmallMargin">
